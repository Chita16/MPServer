    private void Start()
    {
        Debug.Log(Global.loadScene);
        progress = 0;
        StartCoroutine(LoadLevel(Global.loadScene));

    }

    private IEnumerator LoadLevel(string Scene)
    {
        Debug.Log("Scene:" + Scene);
        Loader = Application.LoadLevelAsync(Scene);

        while (!Loader.isDone)
        {
            if (Loader.progress > 0)
            {
                progress = (int)(Loader.progress * 100);
                Draw();
                Debug.Log("progress:" + progress);
            }

            yield return new WaitForEndOfFrame();
        }
    }

    void Draw()
    {
        //GUI.Label(new Rect(30, 160, 600, 20), "(1) " + progress.ToString() + "%"); // 顯示登入回傳
        ProgressLabel.GetComponent<UILabel>().text = progress.ToString() + "%";
    }

